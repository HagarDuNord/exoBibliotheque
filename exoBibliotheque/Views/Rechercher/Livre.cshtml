
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recherche livre</title>
</head>
<body>
    <div>
        <h1>Résultat de la recherche de : @ViewData["TexteCherche"]</h1>
        <table>
            <tr>
                <th>Titre</th>
                <th>Date parution</th>
                <th>Auteur</th>
            </tr>
            @foreach (exoBibliotheque.Models.Livre livre in @ViewData["Livres"] as List<exoBibliotheque.Models.Livre>)
            {
                <tr>
                    <td><a href="~/Afficher/Livre/@livre.Id">@livre.Titre</a></td>
                    <td>@livre.DateParution.ToString("dd/MM/yyyy")</td>
                    <td><a href="~/Afficher/Auteur/@livre.Auteur.Id">@livre.Auteur.Nom</a></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
